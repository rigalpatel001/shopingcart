<%- include('../_layouts/adminheader') %>

<h2 class="page-title"><% if(update) { %> Edit <% } else { %> Add <% } %> a page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>


<form method="post" action="<% if(update) { %>/admin/pages/edit-page/<%=slug %><% } else {%>/admin/pages/add-page<% } %>">
    
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
    
    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>
    
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" id="teditor" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
    </div>
    <% if(update) { %>
     <input type="hidden" name="id" value="<%= id %>">
    <% } %>
    <button class="btn btn-default">Submit</button>
</form>

<%- include('../_layouts/adminfooter') %>